{
	"compilerOptions": {
		"target": "ESNext",
		"baseUrl": ".",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"paths": {
			"@/*": ["src/*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src", "scripts", "*.config.ts"],
	"exclude": ["node_modules", "dist"]
}
